<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
       
<!-- 18 페이지 -->

<tiles-definitions>
	<definition name="mainTemplate" template="/WEB-INF/views/tiles/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/header.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/views/tiles/footer.sjp"></put-attribute>
	</definition>
	
	<!-- 파일명 지정한것보다 *위치를 마지막에 두기 -->
	<!-- 아래 중괄호 안 숫자는 아스타에 적용되는 것, 순서가 바뀌어도 상관없음 -->
	<definition name="*/*" extends="mainTemplate">
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp"></put-attribute>
	</definition>
	
	<!-- <definition name="home" extends="mainTemplate">
		<put-attribute name="content" value="/WEB-INF/views/home.jsp"></put-attribute>
	</definition> -->
	
</tiles-definitions>